    "lint": "npx eslint",
    "updateGoldens": "cross-env UPDATE_GOLDENS=true npm test"
  },
  "devDependencies": {
    "@types/node": "^22.13.9",
    "@typescript-eslint/eslint-plugin": "^8.26.0",
    "@typescript-eslint/parser": "^8.26.0",
    "@vitest/coverage-v8": "^3.0.7",
    "cross-env": "^7.0.3",
    "esbuild": "^0.25.0",
    "eslint": "^9.21.0",
    "eslint-plugin-jsdoc": "^50.6.3",
    "eslint-plugin-tsdoc": "^0.4.0",
    "globals": "^16.0.0",
    "jsdoc": "^4.0.4",
    "typescript": "~5.8.2",
    "typescript-eslint": "^8.26.0",
    "vite": "^6.2.0",
    "vite-node": "^3.0.7",
    "vite-plugin-dts": "^4.5.0",
    "vite-tsconfig-paths": "^5.1.4",
    "vitest": "^3.0.7",
    "vitest-dom": "^0.1.1"
  },
  "peerDependencies": {
    "@rljson/format": "^0.0.1",
    "@rljson/hash": "^0.0.3",
    "@rljson/json": "^0.0.2",
    "@rljson/validate": "^0.0.3",
    "chalk": "^4.1.2",
    "commander": "^13.1.0"
